<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <EditText
        android:id="@+id/editCategoryExpense"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Kategoria"
        android:inputType="text"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDateExpense" />

    <EditText
        android:id="@+id/editDateExpense"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="numberDecimal"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAmountExpense" />

    <EditText
        android:id="@+id/editNameExpense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Nazwa"
        android:inputType="text"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

    <EditText
        android:id="@+id/editAmountExpense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Kwota"
        android:inputType="numberDecimal"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameExpense" />

    <Button
        android:id="@+id/acceptExpenseButton"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:text="@string/accept_expense"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCategoryExpense" />

    <ImageButton
        android:id="@+id/editDateExpenseButton"
        android:layout_width="85dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@+id/editDateExpense"
        app:layout_constraintTop_toBottomOf="@+id/editAmountExpense"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/editCategoryExpenseButton"
        android:layout_width="85dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toEndOf="@+id/editCategoryExpense"
        app:layout_constraintTop_toBottomOf="@+id/editDateExpense"
        app:srcCompat="@drawable/category" />

</androidx.constraintlayout.widget.ConstraintLayout>