<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SummaryFragment">

    <TextView
        android:id="@+id/choosePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/choose_period"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/choosePeriodSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tool_bar"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/incomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosePeriod"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:textColor="@color/black"
        android:text="@string/incomes"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/incomesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosePeriod"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/Green"
        android:text=""
        android:textSize="27sp" />

    <TextView
        android:id="@+id/expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incomes"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:textColor="@color/black"
        android:text="@string/expenses"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/expensesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incomes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:textColor="@color/Red"
        android:text=""
        android:textSize="27sp" />

    <TextView
        android:id="@+id/summaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expenses"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:textColor="@color/black"
        android:text="@string/summaries"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/summariesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expenses"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:text=""
        android:textSize="27sp" />

    <TextView
        android:id="@+id/dbReadedRecords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/summaries"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:text=""
        android:textSize="11sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:text="@string/details"
        android:textSize="30sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_transaction_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/add_transaction"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:backgroundTint="@android:color/transparent"
        app:borderWidth="0dp"
        app:useCompatPadding="true" />

</RelativeLayout>